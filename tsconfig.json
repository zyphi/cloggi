{
	"compilerOptions": {
		"target": "es2016",
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"rootDir": "./src",
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"declaration": true,
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["./src/**/*"],
	"exclude": ["node_modules"]
}
